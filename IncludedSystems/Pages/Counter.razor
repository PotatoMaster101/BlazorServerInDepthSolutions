@page "/counter"

@using IncludedSystems.Data
@inject ICounterService _counterService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @_counterService.Value</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="Reset">Reset to 0</button>

@code {
    private void IncrementCount()
    {
        _counterService.Value++;
    }

    private void Reset()
    {
        _counterService.Value = 0;
    }
}
